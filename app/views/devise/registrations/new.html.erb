<div class = 'login'>
	<h3>Sign Up</h3>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  <ul>
		  <li><div><%= f.label :email %>
		  <%= f.email_field :email, :autofocus => true %></div></li>

		  <li><div><%= f.label :password %>
		  <%= f.password_field :password %></div></li>

		  <li><div><%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation %></div></li>
	  </ul>

	  <div><%= f.submit "Sign up" %></div>
	<% end %>

